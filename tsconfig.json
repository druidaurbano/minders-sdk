{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}